#!/usr/bin/env bash

export SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )";

export TIMEOUT=2700

read -p "Would you like to monitor (s)taging or (p)roduction? (s/p): " -n 1 -r

if [[ $REPLY =~ ^[Pp]$ ]]
then
  $SCRIPT_DIR/monitor_/monitor_expect_tail_logs rfcx-api-production 1 $TIMEOUT | grep -v /health_check &
  $SCRIPT_DIR/monitor_/monitor_expect_tail_logs rfcx-api-production 2 $TIMEOUT | grep -v /health_check &
#  $SCRIPT_DIR/monitor_/monitor_expect_tail_logs rfcx-api-production 3 $TIMEOUT | grep -v /health_check &
else
  $SCRIPT_DIR/monitor_/monitor_expect_tail_logs_single_instance rfcx-api-staging 1 $TIMEOUT | grep -v /health_check &
fi
