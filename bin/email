#!/usr/bin/env node
var fs = require("fs");
var args = process.argv.slice(2);

if (fs.existsSync(__dirname+"/../config/env_vars.js")) {
  var env = require(__dirname+"/../config/env_vars.js").env;
  for (i in env) { process.env[i] = env[i]; }
}


var mandrill = require("../utils/external/mandrill.js").mandrill();

mandrill.sendMessage({
    recipient_email: args[0].trim()
  }).then(function(result){
    console.log(result);
  }).catch(function(err){
    console.log("failed to create user token | "+err);
  });


