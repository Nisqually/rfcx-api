#!/usr/bin/env node
var debug = require('debug')('rfcx-api-express');
var app = require('../app');
var models = require("../models");

models.sequelize.sync().then(function() {

  models.sequelize.getMigrator({
    path: process.cwd()+'/migrations'
    /*,filesFilter: /\.coffee$/*/
  }).migrate({ method: 'up'}).success(function(){

    var server = app.listen(app.get('port'), function(){
      console.log(
        app.get("title")+" (port "+app.get('port')+") ("+process.env.NODE_ENV+")"
        +((process.env.NODE_ENV=== "production") ? (" ("+process.env.productionVersionId+")") : "")
      );
    });

  });

});
